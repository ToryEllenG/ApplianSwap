<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/ETemail"
        android:hint="email@email.com"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ETusername"
        android:layout_alignEnd="@+id/ETusername"
        android:textAlignment="textStart" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ETconfirm"
        android:layout_above="@+id/emailTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ETemail"
        android:layout_alignEnd="@+id/ETemail"
        android:textAlignment="textStart" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/ETpassword"
        android:layout_above="@+id/confirmTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ETconfirm"
        android:layout_alignEnd="@+id/ETconfirm"
        android:textAlignment="textStart" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ETusername"
        android:layout_above="@+id/passwordTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailTV"
        android:layout_above="@+id/ETemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="Confirm Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmTV"
        android:layout_above="@+id/ETconfirm"
        android:layout_alignLeft="@+id/emailTV"
        android:layout_alignStart="@+id/emailTV"
        android:textAlignment="textStart" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTV"
        android:layout_above="@+id/ETpassword"
        android:layout_alignLeft="@+id/confirmTV"
        android:layout_alignStart="@+id/confirmTV"
        android:textAlignment="textStart" />

    <TextView
        android:text="Username:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameTV"

        android:layout_above="@+id/ETusername"
        android:layout_alignLeft="@+id/passwordTV"
        android:layout_alignStart="@+id/passwordTV"
        android:textAlignment="textStart" />

    <Button
        android:text="Sign Up!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTsignup"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/ETemail"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

</RelativeLayout>